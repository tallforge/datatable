{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "iamilyaskazi/livewire-datatable",
    "description": "A pure Livewire DataTable package with search, filters, pagination and load more support.",
    "keywords": [
        "package",
        "laravel",
        "livewire"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ilyas Kazi",
            "email": "ilyaskazi@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "ilyaskazi@gmail.com"
    },
    "require": {
        "php": ">=8.2",
        "laravel/framework": "^11.0",
        "livewire/livewire": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "IamIlyasKazi\\LivewireDataTable\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "IamIlyasKazi\\LivewireDataTable\\LivewireDataTableServiceProvider"
            ]
        }
    }
}
